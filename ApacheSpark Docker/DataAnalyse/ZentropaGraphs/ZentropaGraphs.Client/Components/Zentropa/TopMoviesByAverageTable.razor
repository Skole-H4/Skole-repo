@inject HttpClient Http

@if (_error is not null)
{
    <div class="alert alert-danger">Unable to load raw top-average list: @_error</div>
}
else if (_movies is null)
{
    <div class="alert alert-info">Loading highest-rated titles...</div>
}
else
{
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="h5 m-0">Top 10 Movies by Average Rating</h2>
            <small class="text-muted">Includes low-sample titles &ndash; compare with the strict list above.</small>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col" class="text-end">Average Rating</th>
                        <th scope="col" class="text-end">Ratings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (movie, index) in _movies.Select((m, i) => (m, i + 1)))
                    {
                        <tr>
                            <th scope="row">@index</th>
                            <td>@movie.title</td>
                            <td class="text-end">@movie.avg_rating.ToString("0.00")</td>
                            <td class="text-end">@movie.n_ratings.ToString("#,##0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private IReadOnlyList<MovieRating>? _movies;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _movies = await Http.GetFromJsonAsync<List<MovieRating>>("ZentropaData/top10_movies_by_avg.json");
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private sealed record MovieRating(int movieId, string title, double avg_rating, int n_ratings);
}
