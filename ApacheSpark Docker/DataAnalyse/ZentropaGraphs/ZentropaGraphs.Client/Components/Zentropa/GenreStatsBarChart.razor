@inject HttpClient Http

@if (_error is not null)
{
    <div class="alert alert-danger">Failed to load genre stats: @_error</div>
}
else if (_genres is null)
{
    <div class="alert alert-info">Loading genre stats...</div>
}
else
{
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="h5 m-0">Genre Performance</h2>
            <small class="text-muted">Sorted by average rating</small>
        </div>
        <div class="card-body">
            @foreach (var genre in _genres)
            {
                var ratingRatio = (genre.avg_rating - _minRating) / Math.Max(0.1, _maxRating - _minRating);
                var volumeRatio = genre.n_ratings / (double)_maxVolume;
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <strong>@genre.genre</strong>
                        <span>@genre.avg_rating.ToString("0.00") | @genre.n_ratings.ToString("#,##0") ratings</span>
                    </div>
                    <div class="progress" style="height: 0.6rem;">
                        <div class="progress-bar bg-success" role="progressbar" style=$"width: {(ratingRatio * 100d):0.##}%"></div>
                    </div>
                    <div class="progress mt-1" style="height: 0.3rem;">
                        <div class="progress-bar bg-secondary" role="progressbar" style=$"width: {(volumeRatio * 100d):0.##}%"></div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    private IReadOnlyList<GenreStat>? _genres;
    private string? _error;
    private double _minRating;
    private double _maxRating;
    private int _maxVolume;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var items = await Http.GetFromJsonAsync<List<GenreStat>>("ZentropaData/genre_stats.json");
            if (items is null || items.Count == 0)
            {
                return;
            }

            _genres = items.OrderByDescending(g => g.avg_rating).ToList();
            _minRating = _genres.Min(g => g.avg_rating);
            _maxRating = _genres.Max(g => g.avg_rating);
            _maxVolume = _genres.Max(g => g.n_ratings);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private sealed record GenreStat(string genre, double avg_rating, int n_ratings);
}
