@inject HttpClient Http

@if (_error is not null)
{
    <div class="alert alert-danger">Failed to load global yearly stats: @_error</div>
}
else if (_stats is null)
{
    <div class="alert alert-info">Loading yearly stats...</div>
}
else
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="h5 m-0">Ratings by Year</h2>
            <small class="text-muted">@_stats.Count.ToString("#,##0") seasons of data</small>
        </div>
        <div class="card-body">
            <div class="row text-center mb-3">
                <div class="col">
                    <div class="fw-bold">Peak Activity</div>
                    <div>@_peakYear.year (@_peakYear.n_ratings.ToString("#,##0") ratings)</div>
                </div>
                <div class="col">
                    <div class="fw-bold">Highest Avg</div>
                    <div>@_highestAvg.year (@_highestAvg.avg_rating.ToString("0.00"))</div>
                </div>
                <div class="col">
                    <div class="fw-bold">Lowest Avg</div>
                    <div>@_lowestAvg.year (@_lowestAvg.avg_rating.ToString("0.00"))</div>
                </div>
            </div>
            <div class="table-responsive mb-0">
                <table class="table table-sm table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Year</th>
                            <th scope="col" class="text-end">Average Rating</th>
                            <th scope="col" class="text-end">Ratings</th>
                            <th scope="col">Volume</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in _stats)
                        {
                            var ratio = row.n_ratings / (double)_peakYear.n_ratings;
                            <tr>
                                <th scope="row">@row.year</th>
                                <td class="text-end">@row.avg_rating.ToString("0.00")</td>
                                <td class="text-end">@row.n_ratings.ToString("#,##0")</td>
                                <td>
                                    <div class="progress" style="height: 0.75rem;">
                                        <div class="progress-bar" role="progressbar" style=$"width: {(ratio * 100d):0.##}%"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private IReadOnlyList<YearlyStat>? _stats;
    private string? _error;
    private YearlyStat _peakYear = new(0, 0, 0);
    private YearlyStat _highestAvg = new(0, 0, 0);
    private YearlyStat _lowestAvg = new(0, 0, 0);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var items = await Http.GetFromJsonAsync<List<YearlyStat>>("ZentropaData/ratings_yearly_stats.json");
            if (items is null || items.Count == 0)
            {
                return;
            }

            _stats = items.OrderBy(s => s.year).ToList();
            _peakYear = _stats.MaxBy(s => s.n_ratings)!;
            _highestAvg = _stats.MaxBy(s => s.avg_rating)!;
            _lowestAvg = _stats.MinBy(s => s.avg_rating)!;
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private sealed record YearlyStat(int year, double avg_rating, int n_ratings);
}
