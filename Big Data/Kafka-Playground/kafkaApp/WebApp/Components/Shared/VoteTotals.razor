@inject VoteTotalsStore TotalsStore
@implements IDisposable

<div class="glass-card panel @CssClass">
    <header class="panel-header panel-header--between">
        <div>
            <h2 class="panel-title">@Title</h2>
            @if (!string.IsNullOrWhiteSpace(Subtitle))
            {
                <p class="panel-subtitle">@Subtitle</p>
            }
        </div>
        @if (ShowRefresh)
        {
            <button class="btn btn-outline-secondary btn-sm" @onclick="RefreshAsync" disabled="@_busy">
                @(_busy ? "Syncingâ€¦" : "Sync")
            </button>
        }
    </header>
    @if (!string.IsNullOrWhiteSpace(Status) && ShowStatus)
    {
        <div class="callout callout--muted">@Status</div>
    }
    <div class="table-frame">
        <table class="data-table data-table--compact">
            <thead>
                <tr>
                    <th>Option</th>
                    <th class="u-text-end">Count</th>
                </tr>
            </thead>
            <tbody>
                @if (_totals.Count == 0)
                {
                    <tr><td colspan="2" class="empty-state">@EmptyText</td></tr>
                }
                else
                {
                    @foreach (var kv in _totals)
                    {
                        <tr><td>@kv.Key</td><td class="u-text-end">@kv.Value.ToString("N0")</td></tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Totals";

    [Parameter]
    public string EmptyText { get; set; } = "No totals yet";

    [Parameter]
    public bool ShowRefresh { get; set; } = true;

    [Parameter]
    public bool ShowStatus { get; set; } = true;

    [Parameter]
    public string? Status { get; set; }

    [Parameter]
    public EventCallback RefreshRequested { get; set; }

    [Parameter]
    public string? Subtitle { get; set; }

    [Parameter]
    public string CssClass { get; set; } = string.Empty;

    private readonly Dictionary<string, int> _totals = new(StringComparer.OrdinalIgnoreCase);
    private bool _subscribed;
    private bool _busy;

    protected override void OnInitialized()
    {
        if (!_subscribed)
        {
            TotalsStore.TotalsChanged += HandleTotalsChanged;
            _subscribed = true;
        }

        UpdateTotalsFromStore();
    }

    private async Task RefreshAsync()
    {
        if (!RefreshRequested.HasDelegate || _busy)
        {
            return;
        }

        _busy = true;
        StateHasChanged();

        try
        {
            await RefreshRequested.InvokeAsync(null);
        }
        finally
        {
            _busy = false;
            StateHasChanged();
        }
    }

    private void HandleTotalsChanged()
    {
        _ = InvokeAsync(() =>
        {
            UpdateTotalsFromStore();
            StateHasChanged();
        });
    }

    private void UpdateTotalsFromStore()
    {
        ApplyTotals(TotalsStore.GetSnapshot());
    }

    private void ApplyTotals(IEnumerable<KeyValuePair<string, int>> totals)
    {
        _totals.Clear();
        foreach (var kv in totals.OrderBy(pair => pair.Key, StringComparer.OrdinalIgnoreCase))
        {
            _totals[kv.Key] = kv.Value;
        }
    }

    public void Dispose()
    {
        if (_subscribed)
        {
            TotalsStore.TotalsChanged -= HandleTotalsChanged;
            _subscribed = false;
        }
    }
}
