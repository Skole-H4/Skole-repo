@page "/dashboard"
@rendermode InteractiveServer
@inject VoteTotalsStore TotalsStore
@inject CityVoteStore CityVoteStore
@inject WebApp.Services.PartyCatalog PartyCatalog
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using System.Collections.Generic
@using System.Linq
@using WebApp.Models
@using WebApp.Services
@implements IDisposable

<section class="page-header">
    <div>
        <h1 class="page-title">Live dashboard</h1>
        <p class="page-subtitle">Real-time overview of simulated votes.</p>
    </div>
    <span class="status-pill status-pill--live">
        <span class="status-pill__dot" aria-hidden="true"></span>
        Live feed
    </span>
</section>

<section class="stat-grid">
    <article class="glass-card panel stat-card">
        <span class="stat-label">Total votes</span>
        <span class="stat-value">@OverallTotal.ToString("N0")</span>
    </article>
    <article class="glass-card panel stat-card">
        <span class="stat-label">Leading party</span>
        @if (LeadingParty is not null)
        {
            <div class="stat-leading">
                <span class="stat-leading__badge">@LeadingParty.PartyLetter</span>
                <div>
                    <span class="stat-leading__name">@LeadingParty.RealPartyName</span>
                    <span class="stat-leading__share">@GetShareText(LeadingParty.PartyLetter)</span>
                </div>
            </div>
        }
        else
        {
            <span class="stat-empty">No votes yet</span>
        }
    </article>
    <article class="glass-card panel stat-card">
        <span class="stat-label">Active cities</span>
        <span class="stat-value">@ActiveCityCount</span>
        <span class="stat-caption">Cities currently reporting votes</span>
    </article>
</section>

<section class="glass-card panel">
    <header class="panel-header panel-header--between">
        <div>
            <h2 class="panel-title">Party distribution</h2>
            <p class="panel-subtitle">Updated @GetLatestUpdateText()</p>
        </div>
    </header>
    @if (_partyOrder.Length == 0)
    {
        <p class="empty-state">No party data available.</p>
    }
    else if (OverallTotal == 0)
    {
        <p class="empty-state">No votes registered yet.</p>
    }
    else
    {
        <div class="bar-list">
            @foreach (var party in _partyOrder)
            {
                var count = GetTotalForParty(party.PartyLetter);
                var share = GetShare(party.PartyLetter);
                <div class="bar-list__item">
                    <div class="bar-list__meta">
                        <span class="bar-list__badge">@party.PartyLetter</span>
                        <span class="bar-list__name">@party.RealPartyName</span>
                        <span class="bar-list__count">@count.ToString("N0") votes</span>
                    </div>
                    <div class="bar-list__track">
                        <div class="bar-list__fill" style="width: @share.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%"></div>
                    </div>
                </div>
            }
        </div>
    }
</section>

<section class="glass-card panel">
    <header class="panel-header panel-header--between">
        <div>
            <h2 class="panel-title">City breakdown</h2>
            <p class="panel-subtitle">Totals per city and party</p>
        </div>
    </header>
    @if (_citySnapshots.Count == 0)
    {
        <p class="empty-state">No city votes reported yet.</p>
    }
    else
    {
        <div class="table-frame">
            <table class="data-table data-table--hover">
                <thead>
                    <tr>
                        <th scope="col">Zip</th>
                        <th scope="col">City</th>
                        @foreach (var party in _partyOrder)
                        {
                            <th scope="col" class="u-text-end">@party.PartyLetter</th>
                        }
                        <th scope="col" class="u-text-end">Total</th>
                        <th scope="col" class="u-text-end">Updated</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var snapshot in _citySnapshots)
                    {
                        <tr>
                            <td>@(snapshot.ZipCode <= 0 ? "â€”" : snapshot.ZipCode.ToString())</td>
                            <td>@snapshot.City</td>
                            @foreach (var party in _partyOrder)
                            {
                                var partyCount = GetCityPartyCount(snapshot, party.PartyLetter);
                                <td class="u-text-end">@partyCount.ToString("N0")</td>
                            }
                            <td class="u-text-end u-strong">@snapshot.TotalVotes.ToString("N0")</td>
                            <td class="u-text-end u-soft">@snapshot.UpdatedAt.ToLocalTime().ToString("T")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>

@code {
    private readonly Dictionary<string, int> _totals = new(StringComparer.OrdinalIgnoreCase);
    private IReadOnlyList<CityVoteSnapshot> _citySnapshots = Array.Empty<CityVoteSnapshot>();
    private PartyInfo[] _partyOrder = Array.Empty<PartyInfo>();
    private bool _subscribed;

    private int OverallTotal => _totals.Values.Sum();
    private int ActiveCityCount => _citySnapshots.Count(snapshot => snapshot.TotalVotes > 0);

    private PartyInfo? LeadingParty => _partyOrder
        .Select(p => new
        {
            Party = p,
            Count = GetTotalForParty(p.PartyLetter)
        })
        .OrderByDescending(x => x.Count)
        .ThenBy(x => x.Party.PartyLetter, StringComparer.OrdinalIgnoreCase)
        .FirstOrDefault(x => x.Count > 0)?
        .Party;

    protected override void OnInitialized()
    {
        _partyOrder = PartyCatalog.Parties.ToArray();
        SyncFromStores();
        TotalsStore.TotalsChanged += HandleTotalsChanged;
        CityVoteStore.CityVotesChanged += HandleCityVotesChanged;
        _subscribed = true;
    }

    private void SyncFromStores()
    {
        UpdateTotals(TotalsStore.GetSnapshot());
        UpdateCities(CityVoteStore.GetSnapshot());
    }

    private void HandleTotalsChanged()
    {
        _ = InvokeAsync(() =>
        {
            UpdateTotals(TotalsStore.GetSnapshot());
            StateHasChanged();
        });
    }

    private void HandleCityVotesChanged()
    {
        _ = InvokeAsync(() =>
        {
            UpdateCities(CityVoteStore.GetSnapshot());
            StateHasChanged();
        });
    }

    private void UpdateTotals(IReadOnlyDictionary<string, int> totals)
    {
        _totals.Clear();
        foreach (var kv in totals)
        {
            _totals[kv.Key] = kv.Value;
        }
    }

    private void UpdateCities(IReadOnlyList<CityVoteSnapshot> cities)
    {
        _citySnapshots = cities;
    }

    private int GetTotalForParty(string partyLetter)
        => _totals.TryGetValue(partyLetter, out var value) ? value : 0;

    private double GetShare(string partyLetter)
    {
        var total = OverallTotal;
        if (total == 0)
        {
            return 0d;
        }

        return Math.Round(GetTotalForParty(partyLetter) * 100d / total, 1, MidpointRounding.AwayFromZero);
    }

    private string GetShareText(string partyLetter)
    {
        var share = GetShare(partyLetter);
        if (share <= 0)
        {
            return "0% of votes";
        }

        return $"{share.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)}% of votes";
    }

    private int GetCityPartyCount(CityVoteSnapshot snapshot, string partyLetter)
        => snapshot.PartyTotals.TryGetValue(partyLetter, out var value) ? value : 0;

    private string GetLatestUpdateText()
    {
        var latest = _citySnapshots.Count > 0
            ? _citySnapshots.Max(s => s.UpdatedAt).ToLocalTime().ToString("T")
            : "No data yet";
        return latest;
    }

    public void Dispose()
    {
        if (_subscribed)
        {
            TotalsStore.TotalsChanged -= HandleTotalsChanged;
            CityVoteStore.CityVotesChanged -= HandleCityVotesChanged;
            _subscribed = false;
        }
    }
}
