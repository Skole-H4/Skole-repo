{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "SchemaRegistryUrl": "http://localhost:8081",
    "VotesTopic": "votes",
    "TotalsTopic": "vote-totals",
    "VotesByCityTopic": "votes-by-city",
    "TallyGroupId": "tally-service",
    "TallyTransactionalId": "tally-service-tx-1",
    "DefaultPartitions": 1,
    "DefaultReplicationFactor": 1,
    "StartupGuardDelaySeconds": 8,
    "MaxStreamStartupRetries": 3,
    "EnableInternalTopicCleanup": true,
    "EnableTopicResize": true,
    "InternalTopicDeletionTimeoutSeconds": 180
  }
}
